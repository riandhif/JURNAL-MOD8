#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
    int a=1,b=0,j=0,i;
    cout << "masukan nilai : ";
    cin >> i;
    while (b<i-1)
    {
        cout<<a;
        a=a+(a-1);
        j=j+a;
        cout<<a;
        j=j+a;
        a=a+1;
        b=b+1;
    }
    cout << "total= "<<j;
getch();
}
